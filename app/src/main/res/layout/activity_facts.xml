<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".FactsActivity">

    <!--Corner designs-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_220sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_minus50sdp"
            android:layout_marginTop="@dimen/_minus60sdp"
            android:src="@drawable/corners" />

        <ImageView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_minus60sdp"
            android:layout_marginEnd="@dimen/_minus60sdp"
            android:rotation="45"
            android:src="@drawable/dots" />

        <ImageView
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_220sdp"
            android:layout_gravity="center"
            android:src="@drawable/corners"
            android:rotation="180"
            android:layout_marginBottom="@dimen/_minus60sdp"
            android:layout_marginEnd="@dimen/_minus50sdp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center"
            android:src="@drawable/dots"
            android:rotation="225"
            android:layout_marginBottom="@dimen/_minus60sdp"
            android:layout_marginStart="@dimen/_minus60sdp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>

    <!--Next Button-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_30sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/colorAccent"
            app:cardCornerRadius="@dimen/_100sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:layout_gravity="center_vertical"
                android:text="N E X T"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="@dimen/_2sdp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/_50sdp">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_double_arrow"
                app:tint="@color/colorAccent" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <!--Facts-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_margin="@dimen/_15sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:text="Human teeth are the only part of the body that cannot heal themselves. Teeth are coated in enamel which is not a living tissue."
                android:fontFamily="@font/regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:src="@drawable/border"
            android:rotation="4"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_15sdp"
            android:elevation="@dimen/_1sdp"/>

    </RelativeLayout>

</RelativeLayout>